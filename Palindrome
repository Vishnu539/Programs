// Check if the given input is palindrome or not

// Program link: https://leetcode.com/problems/palindrome-number/description

static boolean isPalindrome(int x){
    if(x < 0 || (x % 10 == 0 && x != 0))
        return false;

    int temp = x;
    int reverse = 0;

    while(temp > 0){
        int remainder = temp % 10;
        reverse = reverse * 10 + remainder;
        temp = temp / 10;
    }

    if(reverse == temp)
        return true;

    return false;
}
